{
    "compilerOptions": {
        "outDir": "./dist",
        "target": "es2018",
        "module": "commonJS",
        "noImplicitAny": true,
        "noImplicitThis": true,
        "noImplicitReturns": true,
        "baseUrl": "./src",
        "paths": {
          "memory/*": ["memory/*"],
          "utils/*": ["utils/*"]
        }
    },
    "include": [
        "src/**/*",
        "@types/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}
